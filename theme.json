{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#E68A1F",
          "name": "Orange",
          "slug": "orange"
        },
        {
          "color": "#2C4B78",
          "name": "Blue",
          "slug": "blue"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Jakarta",
          "slug": "jakarta",
          "fontFamily": "'Plus Jakarta Sans', sans-serif",
          "fontFace": [
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "500",
              "fontStyle": "medium",
              "src": ["file:./assets/fonts/PlusJakartaSans-Medium.ttf"]
            },
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "700",
              "fontStyle": "bold",
              "src": ["file:./assets/fonts/PlusJakartaSans-Bold.ttf"]
            },
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "400",
              "fontStyle": "italic",
              "src": ["file:./assets/fonts/PlusJakartaSans-Italic.ttf"]
            },
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "400",
              "fontStyle": "regular",
              "src": ["file:./assets/fonts/PlusJakartaSans-Regular.ttf"]
            },
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "600",
              "fontStyle": "semibold",
              "src": ["file:./assets/fonts/PlusJakartaSans-SemiBold.ttf"]
            },
            {
              "fontFamily": "Plus Jakarta Sans",
              "fontWeight": "800",
              "fontStyle": "extrabold",
              "src": ["file:./assets/fonts/PlusJakartaSans-ExtraBold.ttf"]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|jakarta",
      "fontWeight": "500"
    },
    "spacing": {
      "margin": { "top": "0px", "bottom": "0px", "left": "0px", "right": "0px" }
    },
    "css": "box-sizing: border-box;",

    "elements": {
      "h3": {
        "typography": {
          "fontWeight": "600"
        },
        "color": {
          "text": "var:preset|color|orange"
        }
      },
      "h2": {
        "typography": {
          "fontWeight": "600"
        },
        "color": {
          "text": "var:preset|color|blue"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "4px"
        },
        "color": {
          "background": "var:preset|color|orange"
        },
        "variations": {
          "fill": {
            "border": {
              "radius": "4px"
            },
            "color": {
              "background": "var:preset|color|orange"
            }
          }
        }
      },
      "core/image": {
        "variations": {
          "Rounded": {
            "border": {
              "radius": "100px"
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    }
  ]
}
